{
  "manifest_version": 3,
  "name": "Duly Noted",
  "description": "Capture voice notes with real-time transcription. Send to GitHub Issues, Projects, OneNote, or save as drafts. Never lose a great idea again.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "sidePanel",
    "windows",
    "identity"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://github.com/login/oauth/*",
    "https://graph.microsoft.com/*",
    "https://openrouter.ai/*",
    "https://api.notion.com/*"
  ],
  "background": {
    "service_worker": "src/service-worker/service-worker.js"
  },
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  "action": {
    "default_title": "Duly Noted - Quick voice notes",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+V"
      },
      "description": "Open Duly Noted side panel"
    }
  }
}
